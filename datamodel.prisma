type Post {
  id: ID! @id
  title: String! @brief
  content: String!
  published: Boolean!
  author: User! @relation(link: INLINE)
  comments: [Comment!]! @relation(link:TABLE)
}

type User {
  id: ID! @id
  name: String 
  posts: [Post!]!  
  tags: [String!]! @scalarList(strategy: RELATION)
  alias: String! 
}

type Comment {
  id: ID! @id
  content: String!
}