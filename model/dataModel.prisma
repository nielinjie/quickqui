type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String
}

type Issue {
  id: ID! @id
  title: String! @brief
  content: String!
  createTime: DateTime! 
  owner: User! @relation(link: INLINE)
  done: Boolean!
  function: Function! @relation(link: INLINE)
}

type Function {
  id:ID! @id
  group:String!
  name:String! @brief
  content:String!
  owner: User! @relation(link: INLINE)
}