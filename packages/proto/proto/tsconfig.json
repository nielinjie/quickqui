{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["esnext", "dom"],
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "allowJs": true
  }
}
